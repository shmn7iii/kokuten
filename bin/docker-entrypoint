#!/bin/bash -e

rm -f /monoiroha/tmp/pids/server.pid

# If running the rails server then create or migrate existing database
if [ "${*}" == "bundle exec rails server -p 3000 -b 0.0.0.0" ]; then
  ./bin/rails db:create
  ./bin/rails ridgepole:apply
  ./bin/rails db:seed
  ./bin/rails kokuten:glueby:init
fi

exec "${@}"
