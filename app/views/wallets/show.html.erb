<!--<h3>Balance: <%#= number_to_currency(@wallet.balance.to_s, unit: '¥ ') %> </h3>-->

<table border="1">
  <tr>
    <th>Transaction ID</th>
    <th>Amount</th>
    <th>Transaction Type</th>
    <th>Transaction Time</th>
  </tr>
  <% @wallet.wallet_transactions.order(transaction_time: :DESC).each do |at| %>
    <tr>
      <td><%= at.id %></td>
      <td><%= number_to_currency(at.amount, unit: '¥ ') %></td>
      <td><%= at.transaction_type %></td>
      <td><%= at.transaction_time %></td>
    </tr>
  <% end %>
</table>

