<%= link_to '<- Home', root_path %>

<h3>Balance: <%= number_to_currency(@wallet.balance, locale: :jp, unit: '₳ ') %> </h3>

<h3>WalletDepositRequests</h3>
<table border="1">
  <tr>
    <th>Request ID</th>
    <th>Amount</th>
    <th>Status</th>
  </tr>
  <% current_user.wallet_deposit_requests.each do |request| %>
    <tr>
      <td><%= request.id %></td>
      <td><%= number_to_currency(request.amount, locale: :jp, unit: '₳ ') %></td>
      <td><%= request.status %></td>
    </tr>
  <% end %>
</table>

<h3>WalletWithdrawalRequests</h3>
<table border="1">
  <tr>
    <th>Request ID</th>
    <th>Amount</th>
    <th>Status</th>
  </tr>
  <% current_user.wallet_withdrawal_requests.each do |request| %>
    <tr>
      <td><%= request.id %></td>
      <td><%= number_to_currency(request.amount, locale: :jp, unit: '₳ ') %></td>
      <td><%= request.status %></td>
    </tr>
  <% end %>
</table>

<h3>WalletTransferRequests</h3>
<table border="1">
  <tr>
    <th>Request ID</th>
    <th>Amount</th>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Status</th>
  </tr>
  <% current_user.wallet_transfer_requests.each do |request| %>
    <tr>
      <td><%= request.id %></td>
      <td><%= number_to_currency(request.amount, locale: :jp, unit: '₳ ') %></td>
      <td><%= request.sender.username %></td>
      <td><%= request.receiver.username %></td>
      <td><%= request.status %></td>
    </tr>
  <% end %>
</table>

<h3>WalletTransactions</h3>
<table border="1">
  <tr>
    <th>Transaction ID</th>
    <th>Amount</th>
    <th>Transaction Type</th>
    <th>Transaction Time</th>
  </tr>
  <% @wallet.wallet_transactions.each do |at| %>
    <tr>
      <td><%= at.id %></td>
      <td><%= number_to_currency(at.amount, locale: :jp, unit: '₳ ') %></td>
      <td><%= at.transaction_type %></td>
      <td><%= at.transaction_time %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Deposit', new_wallet_deposit_path %>
<%= link_to 'Withdrawal', new_wallet_withdrawal_path %>
<%= link_to 'Transfer', new_wallet_transfer_path %>
