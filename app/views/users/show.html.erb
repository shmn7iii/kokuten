<div class="bg-white">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl">
      User information
    </h2>

    <div class="mx-auto max-w-lg rounded-lg border border-2 border-indigo-500 mb-8">
      <%= link_to account_path do %>
        <div class="p-4 py-6">
          <div class="mb-2 text-center text-2l font-bold text-gray-800">
            Account Balance
          </div>
          <div class="flex items-end justify-center gap-1">
            <span class="self-start text-gray-600">
              ¥
            </span>
            <span class="text-4xl font-bold text-gray-800">
              <%= number_to_currency(current_user.account.balance, locale: :jp) %>
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <% if current_user.wallet.present? %>
      <div class="mx-auto max-w-lg rounded-lg border border-2 border-indigo-500 mb-8">
        <%= link_to wallet_path do %>
          <div class="p-4 py-6">
            <div class="mb-2 text-center text-2l font-bold text-gray-800">
              Wallet Balance
            </div>
            <div class="flex items-end justify-center gap-1">
              <span class="self-start text-gray-600">
                ₳
              </span>
              <span class="text-4xl font-bold text-gray-800">
                <%= number_to_currency(current_user.wallet.balance, locale: :jp) %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="mx-auto max-w-lg flex justify-center mb-10">
      <%= button_to 'Log out', session_path, method: :delete, class: "inline-block rounded-lg bg-gray-200 px-8 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base cursor-pointer" %>
    </div>

    <%= form_with scope: :user, url: user_path, class: "mx-auto max-w-lg rounded-lg border" do |form| %>
      <div class="flex flex-col gap-4 p-4 md:p-8">
        <div class="flex gap-4">
          <%= form.text_field :first_name, readonly: true, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
          <%= form.text_field :last_name, readonly: true, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>
        <%= form.text_field :username, readonly: true, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        <%= form.text_field :phone_number, readonly: true, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        <%= form.text_field :email, readonly: true, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
      </div>
    <% end %>

  </div>
</div>


<div class="bg-white">

</div>
