<div class="relative overflow-x-auto">
  <table class="w-full text-sm text-left text-gray-500 border">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 border">
    <tr>
      <th scope="col" class="border px-6 py-3">
        ID
      </th>
      <th scope="col" class="px-6 py-3">
        Username
      </th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr class="bg-white border">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= user.id %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= link_to user.username, admin_user_path(user.id), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
        </th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
