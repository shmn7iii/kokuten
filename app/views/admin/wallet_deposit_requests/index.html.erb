<div class="relative overflow-x-auto">
  <table class="w-full text-sm text-left text-gray-500 border">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 border">
    <tr>
      <th scope="col" class="border px-6 py-3">
        ID
      </th>
      <th scope="col" class="border px-6 py-3">
        User
      </th>
      <th scope="col" class="border px-6 py-3">
        Amount
      </th>
      <th scope="col" class="border px-6 py-3">
        Status
      </th>
      <th scope="col" class="border px-6 py-3">
        Completion Time
      </th>
    </tr>
    </thead>
    <tbody>
    <% @wallet_deposit_requests.each do |request| %>
      <tr class="bg-white border">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= request.id %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= link_to request.user.username, admin_user_path(request.user.id), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= number_to_currency(request.amount, locale: :jp) %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= request.status %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= request.completion_time %>
        </th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
