<div class="relative overflow-x-auto">
  <table class="w-full text-sm text-left text-gray-500 border">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 border">
    <tr>
      <th scope="col" class="border px-6 py-3">
        ID
      </th>
      <th scope="col" class="border px-6 py-3">
        SourceTransaction
      </th>
      <th scope="col" class="border px-6 py-3">
        TargetTransaction
      </th>
      <th scope="col" class="border px-6 py-3">
        Transaction Type
      </th>
      <th scope="col" class="border px-6 py-3">
        Transaction Time
      </th>
    </tr>
    </thead>
    <tbody>
    <% @funds_transactions.each do |transaction| %>
      <tr class="bg-white border-b border">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= link_to transaction.id, admin_funds_transaction_path(transaction.id), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= "#{transaction.source_type}##{transaction.source_id}" %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= "#{transaction.target_type}##{transaction.target_id}" %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= transaction.transaction_type %>
        </th>
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
          <%= transaction.transaction_time %>
        </th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
