<div class="flex gap-4">
  <div class="block">
    <h5 class="text-l font-bold mb-1">
      Current status
    </h5>
    <div class="relative overflow-x-auto">
      <table class="w-full text-sm text-left text-gray-500 border">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 border">
        <tr>
          <th scope="col" class="border px-6 py-3">
            TPC amount
          </th>
          <th scope="col" class="px-6 py-3">
            UTXO pool size
          </th>
        </tr>
        </thead>
        <tbody>
        <tr class="bg-white border">
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
            <%= number_to_currency(@current_tpc_amount, locale: :jp) %>
          </th>
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
            <%= number_to_currency(@current_utxo_pool_size, locale: :jp) %>
          </th>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="block">
    <h5 class="text-l font-bold mb-1">
      Configured
    </h5>
    <div class="relative overflow-x-auto">
      <table class="w-full text-sm text-left text-gray-500 border">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 border">
        <tr>
          <th scope="col" class="border px-6 py-3">
            UTXO pool value
          </th>
          <th scope="col" class="px-6 py-3">
            UTXO pool size
          </th>
        </tr>
        </thead>
        <tbody>
        <tr class="bg-white border">
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
            <%= number_to_currency(@configured_default_value, locale: :jp) %>
          </th>
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap border">
            <%= number_to_currency(@configured_utxo_pool_size, locale: :jp) %>
          </th>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
